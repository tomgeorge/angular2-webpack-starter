{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "pretty": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "outDir": "output",
    "rootDir": "./src"
  },
  "lib": [
    "es6",
    "dom"
  ],
  "exclude": [
    "node_modules",
    "src/compiled",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts",
    "src/server.ts",
    "src/main.browser.aot.ts",
    "src/main.browser.universal.ts",
    "src/app/app.module.universal.browser.ts",
    "src/app/app.module.universal.node.ts",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false },
  "angularCompilerOptions": {
   "genDir": "src/compiled",
   "debug": true
 }
}
